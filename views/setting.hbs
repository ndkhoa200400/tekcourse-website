<!-- Header Start -->
{{> header}}
<!-- Header End -->
<!-- Left Sidebar Start -->
{{> nav_2}}
<!-- Left Sidebar End -->
<!-- Body Start -->
<div class="wrapper">
	<div class="sa4d25">
		<div class="container-fluid">
			<div class="row">
				<div class="col-lg-12">
					<h2 class="st_title"><i class='uil uil-cog'></i> Setting</h2>

					<div class="tab-content" id="pills-tabContent">
						<div class="tab-pane fade show active" id="pills-account" role="tabpanel"
							aria-labelledby="pills-account-tab">
							<div class="account_setting">
								<h4>Your TekCourse Account</h4>

								<div class="container">

									<hr>
									<div class="row">
										<!-- left column -->
										<div class="col-md-3">
											<div class="text-center">
												<img src="//placehold.it/100" class="avatar img-circle" alt="avatar">
												<h6>Upload a different photo...</h6>

												<input type="file" class="form-control">
											</div>
										</div>

										<!-- edit form column -->
										<div class="col-md-9 personal-info">

											<h3>Personal info</h3>

											<form class="form-horizontal" role="form" method="POST"
												action="/student-profile/edit">
												<div class="form-group">
													<label class="col-lg-3 control-label">Name:</label>
													<div class="col-lg-8">
														<input class="form-control" type="text"
															value="{{this.user.name}}" name="name">
													</div>
												</div>


												<div class="form-group">
													<label class="col-lg-3 control-label">Email:</label>
													<div class="col-lg-8">
														<input class="form-control" type="text"
															value="{{this.user.email}}" name="email">
													</div>
												</div>
												<div class="form-group">
													<div class="col-md-8">
														<button class="save_btn" type="submit">Save Changes</button>

													</div>
												</div>
											</form>

											<div class="col-lg-12">
												<div class="divider-1"></div>
											</div>
											<h3>Change Password</h3>
											<form class='form--change-pw'>
												<div class="form-group">
													<label class="col-md-3 control-label">Current Password:</label>
													<div class="col-md-8">
														<input class="form-control current-pw" type="password" value=""
															name="currentPassword">
													</div>
												</div>
												<div class="form-group">
													<label class="col-md-3 control-label">New Password:</label>
													<div class="col-md-8">
														<input class="form-control new-pw" type="password" value=""
															name="password">
													</div>
												</div>
												<div class="form-group">
													<label class="col-md-3 control-label">Confirm password:</label>
													<div class="col-md-8">
														<input class="form-control new-pw-cf" type="password" value=""
															name="passwordConfirm">
													</div>
												</div>
												<div class="form-group">
													<div class="col-md-8">
														<button class="save_btn btn_change_pw">Change password</button>

													</div>
												</div>

											</form>
										</div>

									</div>
									<hr>


								</div>
							</div>

						</div>
					</div>
				</div>
			</div>
		</div>
		{{> footer}}
	</div>
	<!-- Body End -->